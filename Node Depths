def nodeDepths(root):
    # Write your code here.
    sums = []
    calculateNodeDepth(root, 0, sums)
    return max(sums)
    pass

def calculateNodeDepth(node, runningSum, sums):
    if node.left is None and node.right is None:
        return
    if node.left is not None:
        newRunningSum += calculateNodeDepth(node.left, newRunningSum, sums);
    newRunningSum = runningSum + node.value
    if node.left is None and node.right is None:
        sums.append(newRunningSum)
        return 

    
    calculateNodeDepth(node.right, newRunningSum, sums);
# This is the class of the input binary tree.
class BinaryTree:
    def __init__(self, value):
        self.value = value
        self.left = None
        self.right = None
